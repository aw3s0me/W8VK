<Window x:Class="MeridianZ.Views.AuthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthView" Height="480" Width="640"
        ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Rectangle Fill="Black" Margin="-1" Opacity="0.8">
            <Rectangle.Effect>
                <BlurEffect Radius="15" />
            </Rectangle.Effect>
        </Rectangle>
        <Rectangle Fill="White"/>
        <ProgressBar Name="LoadingProgressBar" Style="{StaticResource MetroProgressBarStyle}" IsIndeterminate="True" VerticalAlignment="Top" Padding="0"/>
        <WebBrowser Name="Browser" Margin="0,3,0,0"/>
    </Grid>
</Window>
